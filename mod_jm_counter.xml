<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>MOD_JM_COUNTER</name>
	<creationDate>04/10/2019</creationDate>
	<author>Joomla-Monster.com</author>
	<copyright>Copyright (C) 2019 Joomla-Monster.com, All rights reserved.</copyright>
	<license> http://www.gnu.org/licenses GNU/GPL</license>
	<authorEmail>artur.kaczmarek@joomla-monster.com</authorEmail>
	<authorUrl>https://joomla-monster.com</authorUrl>
	<version>1.04</version>
	<description>MOD_JM_COUNTER_DESC</description>
	<files>
			<filename module="mod_jm_counter">mod_jm_counter.php</filename>
			<filename>index.html</filename>
			<folder>assets</folder>
			<folder>tmpl</folder>
			<folder>language</folder>
			<folder>fields</folder>
	</files>

	<updateservers>
			<server type="extension" priority="1" name="MOD_JM_COUNTER">https://joomla-monster.com/updates/mod_jm_counter.xml</server>
		</updateservers>

	<config>
		<fields name="params" addfieldpath="/modules/mod_jm_counter/fields">

			<fieldset name="basic">

				<field name="items" type="jmelements" label="MOD_JM_COUNTER_FIELD_ITEMS" description="MOD_JM_COUNTER_FIELD_ITEMS_DESC" element_name="MOD_JM_COUNTER_FIELD_ITEM" element_fields="subtitle,image_icon,alt,icon,color,from,to,decimals,unit,speed,interval" element_field="subtitle" filter="raw" />

					<field name="subtitle" type="text" default="" label="MOD_JM_COUNTER_FIELD_SUBTITLE" description="MOD_JM_COUNTER_FIELD_SUBTITLE_DESC" />
					<field name="image_icon" type="media" directory="" label="MOD_JM_COUNTER_FIELD_ICON_IMAGE" />
					<field name="alt" type="text" default="" label="MOD_JM_COUNTER_FIELD_ICON_IMAGE_ALT" description="MOD_JM_COUNTER_FIELD_ICON_IMAGE_ALT_DESC" />
					<field name="icon" type="text" default="" label="MOD_JM_COUNTER_FIELD_ICON" description="MOD_JM_COUNTER_FIELD_ICON_DESC" />
					<field name="color" type="color" default="" label="MOD_JM_COUNTER_FIELD_COLOR" description="MOD_JM_COUNTER_FIELD_COLOR_DESC" />
					<field name="from" type="number" default="" label="MOD_JM_COUNTER_FIELD_FROM" description="MOD_JM_COUNTER_FIELD_FROM_DESC" />
					<field name="to" type="number" default="" label="MOD_JM_COUNTER_FIELD_TO" description="MOD_JM_COUNTER_FIELD_TO_DESC" />
					<field name="decimals" type="number" default="" min="0" label="MOD_JM_COUNTER_FIELD_DECIMALS" description="MOD_JM_COUNTER_FIELD_DECIMALS_DESC" />
					<field name="unit" type="text" default="" label="MOD_JM_COUNTER_FIELD_UNIT" description="MOD_JM_COUNTER_FIELD_UNIT_DESC" />
					<field name="speed" type="number" default="" label="MOD_JM_COUNTER_FIELD_SPEED" description="MOD_JM_COUNTER_FIELD_SPEED_DESC" />
					<field name="interval" type="number" default="" label="MOD_JM_COUNTER_FIELD_INTERVAL" description="MOD_JM_COUNTER_FIELD_INTERVAL_DESC" />

					<field type="spacer" />

					<field name="format" type="radio" class="btn-group" default="0" label="MOD_JM_COUNTER_FIELD_FORMAT" description="MOD_JM_COUNTER_FIELD_FORMAT_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>

					<field name="separator" type="text" default="." label="MOD_JM_COUNTER_FIELD_SEPARATOR" description="MOD_JM_COUNTER_FIELD_SEPARATOR_DESC" />

					<field name="span_size" type="list" default="" required="true" label="MOD_JM_COUNTER_FIELD_SPAN_SIZE" description="MOD_JM_COUNTER_FIELD_SPAN_SIZE_DESC">
						<option value="">Please Select</option>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</field>

					<field name="theme" type="list" default="1" label="MOD_JM_COUNTER_FIELD_THEME" description="MOD_JM_COUNTER_FIELD_THEME_DESC">
						<option value="1">MOD_JM_COUNTER_FIELD_THEME_DEFAULT</option>
						<option value="2">MOD_JM_COUNTER_FIELD_THEME_OVERRIDE</option>
					</field>

					<field type="note" name="theme_note" class="alert alert-info" label="MOD_JM_COUNTER_FIELD_THEME_NOTE" description="MOD_JM_COUNTER_FIELD_THEME_NOTE_DESC" showon="theme:2" />
					<field name="load_fontawesome" type="radio" class="btn-group" default="0" label="MOD_JM_COUNTER_FIELD_AWESOME" description="MOD_JM_COUNTER_FIELD_AWESOME_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
